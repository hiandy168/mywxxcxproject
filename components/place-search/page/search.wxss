}

.searchNearbyContainer{
	display: flex;
	flex: 1;
	height: 88rpx;
	line-height: 88rpx;
	font-size: 24rpx;
	color: #fff;
	overflow: hidden;
    align-items: center;
    padding-left: 24rpx;
    padding-right: 24rpx;
    border-bottom: 2rpx #ebebeb solid;
}

.searchNearbyTv{    
    display: flex;
    height: 88rpx;
    line-height: 88rpx;
    font-size: 24rpx;
    color: #444444;
    overflow: hidden;
}
.tips{
	display: flex;
	overflow: hidden;
	color: #1fba22;
	font-size: 24rpx;
	height: 88rpx;
	line-height: 88rpx;
