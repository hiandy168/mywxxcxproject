.main{
    display: flex;
    flex-direction: column;
    background-color: white;
}

.searchContainer{
    display: flex;
	flex: 1;
    flex-direction: row;
    align-items: center;
	background-color: #fff;
	height: 88rpx;
    padding-left: 24rpx;
    border-bottom: 2rpx #ebebeb solid;
}

.searchIconInputContainer{
    display: flex;
    flex: 1;
	height: 60rpx;
    flex-direction: row;
    background-color: #f4f4f4;
    align-items: center;
    padding-left: 24rpx;
	border-radius: 6rpx;
}

.searchInput{
	flex: 1;
	margin: 14rpx 0;
