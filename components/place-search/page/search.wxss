}
.viewHide{
    display: none;
}
.tabContainer{
	display: flex;
	justify-content: space-around;
	height: 84rpx;
	align-items: center;
    border-bottom: 2rpx #ebebeb solid;
    padding-left: 24rpx;
    padding-right: 24rpx;
}
.h42{
	height: 84rpx;
}
.listContainer{
    display: flex;
    flex-direction: column;
    flex: 1;
    height: 100vh;
}
.itemContainer{
    display: flex;
    flex-direction: row;
    height: 88rpx;
    font-size: 24rpx;
    color: #333;
    padding-left: 24rpx;
    padding-right: 24rpx;
    align-items: center;
    border-bottom: 2rpx solid #ebebeb;
}
.item-name{
    display: flex;
	font-size:26rpx;
	color: #333333;
	flex: 4;
	margin-left: 12rpx;
	text-overflow: ellipsis;
	overflow: hidden;
	white-space: nowrap;
}
.item-type-txt{
	display: flex;
	font-size:24rpx;
	color: #888888;
	margin-right: 12rpx;
	flex: 1;
	justify-content: flex-end;
}
.mask{
    display: flex;
