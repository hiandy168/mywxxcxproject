.sch_quick{
	height: 72rpx;padding-right: 0;padding-left: 0;backface-visibility: hidden;left: 0;right: 0;user-select: none;border-bottom: 2rpx solid #ebebeb;
	border-top:2rpx solid #eee;bottom: inherit;top: 88rpx;z-index:90;color:#555;background-color: #fff;}
.lst_ft {width: 100%;display: flex;align-items: center;
	justify-content: center;height:72rpx}
.lst_ft li {flex:1; position: relative;justify-content: center;align-items: center;color:#444;}
.lst_ft li p {color:#777;}
.lst_ft .tit {padding:0 6rpx;overflow: hidden;white-space: nowrap;text-overflow: ellipsis; line-height: 36rpx;}

.lst_ft .cur .tit {color: #49f;}
.lst_ft .cur.ft_e .tit {padding: 0 12rpx 0 0;}
.lst_ft li:first-child .tit {border-left: none;}
.lst_ft li i{display: inline-block;width: 0;height: 0;border-left: 10rpx solid transparent;border-right: 10rpx solid transparent;border-top: 10rpx solid #ddd;margin-left: 8rpx;position: absolute;-webkit-transition: all .2s ease-in-out;transition: all .2s ease-in-out; top: 20rpx; }
.lst_ft .on i{-webkit-transform: rotate(180deg);transform: rotate(180deg);}
.lst_ft .cur i{border-top: 10rpx solid #49f;}
.order-sale{
	padding:24rpx;
